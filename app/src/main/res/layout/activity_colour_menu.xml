<?xml version="1.0" encoding="utf-8"?>
<androidx.wear.widget.BoxInsetLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/box_inset_layout_padding"
    android:background="@drawable/background"
    tools:context=".ColourMenu"
    tools:deviceIds="wear">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/inner_frame_layout_padding"
        app:layout_boxedEdges="all">

        <TextView
            android:id="@+id/text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|center"
            android:fontFamily="@font/uncial_antiqua"
            android:text="@string/colour_menu_title"
            android:textSize="20sp"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="108dp"
            android:layout_gravity="bottom|center">

            <!-- Button to select colour one and store -->
            <ImageButton
                android:id="@+id/imageButton2"
                android:layout_width="52dp"
                android:layout_height="52dp"
                android:layout_marginTop="2dp"
                android:background="#00000000"
                android:scaleType="fitXY"
                android:src="@drawable/d20_14_greenblack"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <!-- Button to select colour two and store -->

            <!-- Button to select colour three and store -->
            <ImageButton
                android:id="@+id/imageButton3"
                android:layout_width="52dp"
                android:layout_height="52dp"
                android:layout_marginStart="2dp"
                android:layout_marginEnd="68dp"
                android:layout_marginBottom="2dp"
                android:background="#00000000"
                android:scaleType="fitXY"
                android:src="@drawable/d4_2"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <ImageButton
                android:id="@+id/imageButton4"
                android:layout_width="52dp"
                android:layout_height="52dp"
                android:layout_marginStart="68dp"
                android:layout_marginEnd="2dp"
                android:layout_marginBottom="2dp"
                android:background="#00000000"
                android:scaleType="fitXY"
                android:src="@drawable/d6_3"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </FrameLayout>
</androidx.wear.widget.BoxInsetLayout>